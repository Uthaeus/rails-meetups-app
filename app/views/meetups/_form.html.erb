<div class="meetup-form">
  <%= form_with(model: meetup) do |form| %>
    <% if meetup.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(meetup.errors.count, "error") %> prohibited this meetup from being saved:</h2>

        <ul>
          <% meetup.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :user_id, value: @user.id %>

    <div class="form-group">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :location, style: "display: block" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :time, style: "display: block" %>
      <%= form.time_field :time, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :date, style: "display: block" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :main_image, style: "display: block" %>
      <%= form.file_field :main_image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :thumb_image, style: "display: block" %>
      <%= form.file_field :thumb_image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>