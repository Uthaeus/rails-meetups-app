<%= link_to meetup, class: 'meetup-item-link' do %>
  <div id="<%= dom_id meetup %>" class="meetup-item-wrapper">

    <%= image_tag "#{meetup.thumb_image}", width: '100%', height: '250px' %>

    <p class="w-100 text-center meetup-item-title"><%= meetup.title %></p>

    <div class="meetup-item-details">
      <p class="meetup-item-detail"><%= meetup.location %></p>
      <p class="meetup-item-detail"><%= date_string_for(meetup.date) %></p>
    </div>

  </div>
<% end %>
